<!-- create Potluck form -->
<div class="container">
<h1 style="text-align: center;">Create Potluck</h1>
<div>
<form class="form event-form">
    <div class="form-group">
        <label for="theme">Event Name/Theme</label>
        <input class="form-control" id="event-theme" type="text" name="theme">
    </div>
    <div class="form-group">
        <label for="date">Date of Potluck:</label>
        <input class="form-control" id="event-date" type="datetime-local" name="date">
    </div>

      
    <div class="form-group">
        <label for="location">Potluck Venue:</label>
        <input class="form-control" id="event-location" type="text" name="location" placeholder="ex. office, my home">
    </div>
</form>

<div class="form-group d-flex justify-content-center">
    <button class="btn btn-info" style="width: 25vw"type="submit" id="create-potluck">CREATE</button>
</div>  
</div>
</div>
<script src="/js/create-event.js"></script>

