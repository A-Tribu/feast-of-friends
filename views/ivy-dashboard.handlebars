<h1>Dashboard</h1>
<div id="eventInput ">
    <form class="form join-event">
        <div class="form-group d-flex justify-content-center">

            <input class="form-input col-5" placeholder="Enter Potluck Code" type="text" id="event-code" />
        </div>
        <div class="form-group join d-flex justify-content-center">
        <button class="btn btn-success col-3" type="submit" id="joinPotluck">Join Potluck</button>
        </div>  
    </form>

    <div class="form-group d-flex justify-content-center">
        <button class="btn btn-info col-3" type="submit" id="createPotluck">Create Potluck</button>
    </div>  
</div>
<!--close div event input  -->
<div class="container" id="eventSummary">
    {{!-- events user organized --}}
    <div class="container" id="upcomingEvents">
        <h4>Events You Organized</h4>
    </div>
    <!-- close upcoming Events -->
    {{#each event1 as |event|}}
    <div class="card">
        <div class="card-header">
        <h5><a class="link" href="/event/{{id}}">{{theme}} on {{moment eventDate format="dddd hh:mm A MMM DD, YYYY"}}</a></h5>
            <p>Organized by {{user.firstName}} {{user.lastName}}</p>
        </div>
    </div>
    {{/each}} 

    {{!-- <div class="container" id="pastEvents">
        <h4>Past Events</h4>
    </div> --}}
    <!-- close past events -->
    {{!-- events user is contributing in --}}
    <div class="container" id="upcomingEvents">
        <h4>Events You Are Part Of</h4>
    </div>
    {{#each event2 as |events|}}
    <div class="card">
        <div class="card-header">
        <h5><a class="link" href="/event/{{eventID}}"/a>{{event.theme}} on {{moment event.eventDate format="dddd hh:mm A MMM DD, YYYY"}}</a></h5>
            <p>Organized by {{event.user.firstName}} {{event.user.lastName}}</p>
        </div>
    </div>
    {{/each}} 
    

</div>

<script src="/js/dashboard.js"></script>
<script src="/js/login.js"></script>
<script src="/js/signup.js"></script>
