<div class="container bg-info edit-event">
    <form class="form article-form ">
        <div class="form-group">
            <label for="theme" class="form-label">Potluck Theme</label>
            <input class="form-input w-100" type="text" id="theme" value="{{data.title}}"/>
        </div>
        <div class="form-group">
            <label for="date">Date of Potluck:</label>
            <input class="form-control" id="event-date" type="datetime-local" value="{{data.eventDate}}" name="date">
        </div>
        <div class="form-group">
            <label for="location" class="form-label">Location</label>
            <input class="form-input w-100" type="text" id="location" value="{{data.where}}"/>
        </div>
        <div class="container row justify-content-around">
        <div class="form-group save">
        <button class="btn btn-success" type="submit" id="republish">Save</button>
        </div>
        <div class="form-group delete">
        <button class="btn btn-danger" type="submit" id="delete">Delete</button>
        </div>
        </div>
    </form>
</div>